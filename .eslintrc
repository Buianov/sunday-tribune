{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "rules": {
    "curly": 2,
    "eqeqeq": 2,
    "space-infix-ops": 2,
    "linebreak-style": [2, "unix"],
    "camelcase": [2, { "properties": "never" }],
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
